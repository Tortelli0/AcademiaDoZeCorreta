        <Label x:Name="LabelLogradouro" Content="{x:Static resources:Idioma.LabelLogradouro}" HorizontalAlignment="Left" Height="26" Margin="12,186,0,0" VerticalAlignment="Top" Width="129" Foreground="White"/>
        <TextBox x:Name="txtLogradouro" HorizontalAlignment="Left" Margin="12,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="439" RenderTransformOrigin="0.625,0.326" Height="20" TabIndex="5" GotFocus="txtLogradouro_GotFocus" LostFocus="txtLogradouro_LostFocus"/>
        <Label x:Name="LabelBairro" Content="{x:Static resources:Idioma.LabelBairro}" HorizontalAlignment="Left" Height="29" Margin="10,293,0,0" VerticalAlignment="Top" Width="110" Foreground="White"/>
