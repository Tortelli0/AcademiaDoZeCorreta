        <TextBox x:Name="txtComplemento" HorizontalAlignment="Left" Margin="145,433,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" RenderTransformOrigin="0.625,0.326" Height="20" TabIndex="12" GotFocus="txtComplemento_GotFocus" LostFocus="txtComplemento_LostFocus"/>
        <TextBox x:Name="txtNumero" HorizontalAlignment="Left" Margin="10,433,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.625,0.326" Height="20" TabIndex="11" GotFocus="txtNumero_GotFocus" LostFocus="txtNumero_LostFocus"/>
        <Label x:Name="LabelIdLogradouro" Content="{x:Static resources:Idioma.LabelIdLogradouro}" HorizontalAlignment="Left" Height="26" Margin="16,239,0,0" VerticalAlignment="Top" Width="166" Foreground="White"/>
        <TextBox x:Name="txtIdLogradouro" HorizontalAlignment="Left" Height="21" Margin="12,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" IsEnabled="False"/>
        <TextBox x:Name="txtCepLogradouro" HorizontalAlignment="Left" Height="21" Margin="201,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" TabIndex="6" GotFocus="txtCepLogradouro_GotFocus" LostFocus="txtCepLogradouro_LostFocus"/>
        <Label x:Name="LabelCepLogradouro" Content="{x:Static resources:Idioma.LabelCepLogradouro}" HorizontalAlignment="Left" Height="26" Margin="200,239,0,0" VerticalAlignment="Top" Width="224" Foreground="White"/>

    </Grid>

</Window>
